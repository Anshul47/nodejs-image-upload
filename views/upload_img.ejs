        <script>
            $(document).ready(function(){  
                $('#single_upload').on('submit', function(e){ 
                    e.preventDefault(); 
                    $.ajax({  
                        url: "/upload-img",  
                        type: "POST",  
                        data: new FormData(this),  
                        contentType: false,  
                        processData:false,  
                        success: function(data){  
                            var html = '<img src="'+data.thumb_url+'">';
                            $('#uploaded_image_1').append(html);
                        }  
                    }); 
                });

                $('#multiple_upload').on('submit', function(e){ 
                    e.preventDefault(); 
                    $.ajax({  
                        url: "/upload-imges",  
                        type: "POST",  
                        data: new FormData(this),  
                        contentType: false,  
                        processData:false,  
                        success: function(data){  
                            var html = '';
                            for(var i = 0; i < data.length; i++){
                                html += '<img src="'+data[i].thumb_url+'">';
                            }
                            $('#uploaded_image_2').append(html);
                        }  
                    }); 
                });
            });    

        </script>

    </body>  
</html>


